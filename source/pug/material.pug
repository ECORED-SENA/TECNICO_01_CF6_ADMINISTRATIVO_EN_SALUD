include mixins/functions

doctype
html(lang="es")
    head
        include includes/head.pug


    body#page-home.theme-dark.page-header-textura

        header#CursoPresentacion.curso-presentacion.page-header
            .page-textura
                .container

                    include includes/page-home_topbar.pug

                    +pageHeader("Tema", "assets/images/header/header_media.svg", "")   

        section#ResultadosAprendizaje.curso-resultados.section.bg-base-light

            .container

                include includes/page-home_resultados.pug  

        section#IndiceTematico.curso-indice-tematico.section

            .container

                h2 Desarrollo de <br>contenidos
                .brand-line-primary

                .row.justify-content-center
                    .col-12.col-sm-10
                        .card.wow.flipInX(data-wow-delay=".4s")
                            
                            .card-body

                                ul.list-group.list-group-flush.list.my-n3.nav-temas
                                    +navTemaItem('1', 'Resolución 5261 de 1994, Establece el Manual de Actividades, Intervenciones y Procedimientos del Plan Obligatorio de Salud en el Sistema General de Seguridad Social en Salud', '#tema-1')
                                    +navTemaItem('2', 'Resolución 537 de 2020 y sus anexos. Se modifica la resolución 3495 de 2019 clasificación única de procedimientos en salud-CUPS', '#tema-2')
                                    +navTemaItem('3', 'Resolución 1531 de 2014 modifica a la Resolución 3347 de 2000. Reglamentan los datos básicos que deben reportar los prestadores de servicios de salud y las entidades administradoras de planes de beneficios sobre los servicios de salud prestados', '#tema-3')
                                    +navTemaItem('4', 'Terminología medicoquirúrgica', '#tema-4')
                                    +navTemaItem('5', 'Códigos CIE 10', '#tema-5')
                                    +navTemaItem('6', 'El sistema de incentivos como herramienta para el mejoramiento de la productividad empresarial', '#tema-6')
                                    +navTemaItem('7', 'Redes Integrales de prestadores de servicios de salud Lineamientos para el Proceso de Conformación, Organización, Gestión, Seguimiento y Evaluación', '#tema-7')
                                    +navTemaItem('8', 'Rutas integrales de atención en salud – RIAS', '#tema-8')   
                                    +navTemaItem('glosary', 'Glosario', '#glosario')
                                    +navTemaItem('folder', 'Material complementario', '#anexos')
                                    +navTemaItem('references', 'Referencias bibliográficas', '#referencias')


        section#mainContent         
            #tema-1
                include pages/1-tema.pug
            #tema-2
                include pages/2-tema.pug
            #tema-3
                include pages/3-tema.pug
            #tema-4
                include pages/4-tema.pug
            #tema-5
                include pages/5-tema.pug
            #tema-6
                include pages/6-tema.pug
            #tema-7
                include pages/7-tema.pug
            #tema-8
                include pages/8-tema.pug                           
            #glosario
                include pages/glosario.pug
            #anexos
                include pages/material-complementario.pug
            #referencias
                include pages/referencias.pug


        +creditosFooter("assets/images/logos/senaLogo.svg")


        a.scroll-to-top-btn
            .fa.fa-angle-up.fa-2x

        script(src="assets/js/vendor.js")
        script(src="js/local.js")





